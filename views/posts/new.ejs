<% layout('layouts/boilerplate2') -%>
<div style='margin:10% 10%;  text-align:center; '>
	<h1>New Listing !</h1>

	<form action="/posts" method="POST" enctype="multipart/form-data">
		<div>
			<label for="name" id="detail">Enter your Name :</label>
			<input type="text" id="name" name="post[title]" placeholder="Name">
		</div>
		<div>
			<label for="occupation" id="detail">Enter your occupation :</label>
			<input type="text" id="occupation" name="post[occupation]" placeholder="occupation">
		</div>
		<div>
			<label for="salary" id="detail">Salary Requirement/hr in $ :</label>
			<input type="number" id="salary"name="post[price]" step=".01" placeholder="Salary in $/hr">
		</div>
		<div>
			<label for="image" id="detail">Enter pictures(upto 4) :</label>
			<input type="file" id="image" accept="images/*" name="images" multiple />
		</div>
		<div>
			<label for="description" id="detail">Tell us about yourself :</label>
			<textarea name="post[description]" id="description" placeholder="Describe yourself"></textarea>
		</div>
		
		<div>
			<label for="location" id="detail">Enter your Address :</label>
			<input type="text" name="post[location]" id="location" placeholder="Location">
		</div>
		<div>
			<label for="phone" id="detail">Enter your phone number :</label>
  			<input type="tel" id="phone" name="post[phone]" placeholder="telnum">
		</div>

		<input type="submit" id="detail">
		<input type="reset" id="detail">
	</form>
</div>